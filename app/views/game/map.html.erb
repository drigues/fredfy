            <span></span>
            <p>Imports</p>
          </div>
          <div class="6 disabled">
            <span></span>
            <p>Responsive</p>
          </div>
        </div>
      </div>

      <div class="profile">
        <div class="health">
          100%
        </div>
        <div class="scores">
          0 scores
        </div>
      </div>

      <div class="ranking">
        <h3>Ranking</h3>
        <div>
          <%= render 'game/ranking-list' %>
        </div>
      </div>

    </div>

  </div>
