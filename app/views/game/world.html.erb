<%= render 'welcome/header' %>

<div id="world" class="block-content">
  <h1>Choose a world</h1>
  <div class="content">
    <fieldset class="form-group hero">
      <div class="form-check fred">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="heroradios" id="fred" value="fred">
          HTML 5
        </label>
      </div>
      <div class="form-check chloe">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="heroradios" id="chloe" value="chloe">
          CSS 3
        </label>
      </div>
      <div class="form-check greg">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="heroradios" id="greg" value="fred">
          JavaScript
        </label>
      </div>
    </fieldset>
    <%= link_to 'Start the adventure', game_map_path, class: "btn btn-outline-primary btn-lg" %>
  </div>
</div>

<%= render 'welcome/footer' %>
