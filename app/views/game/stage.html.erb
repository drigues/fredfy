<%= render 'welcome/header' %>

<div id="stage" class="block-content">
  <h1>Stage</h1>
  <div class="content row">

    <div class="story col-md-4">
      <div class="dialogue">
        <h1>Hey fella!</h1>
        <div class="text">
          <p>Bla bla bla</p>
        </div>
      </div>

      <div class="hero">
        <div class="says">
        </div>
        <div class="character">
        </div>
      </div>
    </div>

    <div class="quest-list col-md-8">
      <div class="question col-md-12">
        <div class="title">
          <h4>What is the name of the mother of Marie Clementine?</h4>
        </div>
        <div class="answers">
          <div class="form-check">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="fred" value="fred">
              Delfina
            </label>
          </div>
          <div class="form-check">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="chloe" value="chloe">
              Joaquina
            </label>
          </div>
          <div class="form-check">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="greg" value="fred">
              Mae Joana
            </label>
          </div>
          <div class="form-check">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="new" value="chloe">
              Pauline von Metternich
            </label>
          </div>
        </fieldset>
        <%= link_to 'OK', game_congrats_path, class: "ok-answer btn btn-outline-primary" %>
        </div>
      </div>

      <div class="status col-md-12">
        <div class="help-cards col-md-4">
        </div>
        <div class="helth col-md-4">
          100%
        </div>
        <div class="scores col-md-4">
          10 <span>points</span>
        </div>
      </div>

      <div class="terminal">
      </div>

      <div class="view-map">
      </div>

    </div>

  </div>
</div>
