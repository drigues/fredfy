            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="ciara" value="ciara">
              Ciara
            </label>
          </div>
        </div>
        <div class="col-lg col-sm">
          <div class="form-check liz locked">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="liz" value="liz">
              Liz
            </label>
          </div>
        </div>
      </div>
    </fieldset>
    <%= link_to 'Continue', game_world_path, class: "btn btn-outline-primary btn-lg" %>
  </div>

</div>

<%= render 'welcome/footer' %>
