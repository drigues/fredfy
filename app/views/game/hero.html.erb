      <div class="row">
        <div class="col-md col-sm">
          <div class="form-check fred">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="fred" value="fred">
              Fred
            </label>
          </div>
        </div>
        <div class="col-lg col-sm">
          <div class="form-check chloe">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="chloe" value="chloe">
              Chloe
            </label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg col-sm">
          <div class="form-check greg">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="greg" value="greg">
              Greg
            </label>
          </div>
        </div>
        <div class="col-lg col-sm">
          <div class="form-check piu">
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="heroradios" id="piu" value="Piu">
              Piu
            </label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg col-sm">
